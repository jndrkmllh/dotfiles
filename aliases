# Get External IP
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip

# Settings and Controls
alias zshconfig="nano ~/.zshrc"
alias shellreload="source ~/.zshrc" # maybe also try exec zsh
alias ohmyzshconfig="nano ~/.oh-my-zsh"

# Quickly run bundle executions
alias be='bundle exec '

# Quickly open rails credentials with sublime text 
alias creds_dev='VISUAL="subl --wait" bin/rails credentials:edit --environment development'
alias creds_staging='VISUAL="subl --wait" bin/rails credentials:edit --environment staging'
alias creds_prod='VISUAL="subl --wait" bin/rails credentials:edit --environment production'